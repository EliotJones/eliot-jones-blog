@model IReadOnlyList<LightBlog.Server.ViewModels.PostViewModel>

<div class="side-box">
    <h2>Recent Posts</h2>

    <ul>
        @for (var i = 0; i < Model.Count; i++)
        {
            <li>
                <span class="post-date-sb">@Model[i].Date.ToString("dd MMM, yyyy")</span>
                <a asp-route="post"
                   asp-route-year="@Model[i].Date.Year"
                   asp-route-month="@Model[i].Date.Month"
                   asp-route-name="@Model[i].Name">
                    @Model[i].Title
                </a>
            </li>
        }
    </ul>
    
    <h2>Other Sites</h2>
    <ul>
        <li><a href="https://hn-trends.eliot-jones.com">HackerNews Trends</a></li>
        <li><a href="http://eliot-jones.com:6575">FAF Lobby Sim</a></li>
        <li><a href="https://eliot-jones.com/rss">RSS</a></li>
        <li><a href="/games">Games</a></li>
    </ul>
</div>